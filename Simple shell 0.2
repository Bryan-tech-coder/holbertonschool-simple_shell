#include "main.h"
#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <string.h>
#include <sys/wait.h>

/**
 * main - simple shell
 * Return: 0 on success
 */
int main(void)
{
	char *line = NULL, *argv[64];
	size_t len = 0;
	ssize_t read_chars;
	int argc;
	char *token;
	pid_t pid;

	while (1)
	{
		printf("$ ");
		read_chars = getline(&line, &len, stdin);
		if (read_chars == -1) /* EOF or error */
		{
			free(line);
			exit(EXIT_SUCCESS);
		}

		line[read_chars - 1] = '\0'; /* remove newline */
		if (strcmp(line, "exit") == 0)
		{
			free(line);
			exit(EXIT_SUCCESS);
		}

		/* Split line into arguments */
		argc = 0;
		token = strtok(line, " \t\n");
		while (token != NULL && argc < 64)
		{
			argv[argc++] = token;
			token = strtok(NULL, " \t\n");
		}
		argv[argc] = NULL;
		if (argc == 0)
			continue;

		/* fork and execute */
		pid = fork();
		if (pid == -1)
		{
			perror("./hsh");
			free(line);
			exit(EXIT_FAILURE);
		}
		if (pid == 0)
		{
			execve(argv[0], argv, NULL);
			perror("./hsh"); /* execve failed */
			free(line);
			exit(EXIT_FAILURE);
		}
		else
		{
			wait(NULL);
		}
	}
	free(line);
	return (0);
}
